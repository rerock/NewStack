<head>
  <meta charset="UTF-8">
  <title>Stack Sign In Screen</title>
</head>
<body>
  <div class="wrapper">
    <div class="container">
      <h1>Welcome to Stack</h1>
        <form action="/session" method="post" class="form_static">
          <%= auth_token %>
          <input type="text" placeholder="Email" name="user[username]">
          <input
            type="hidden"
            name="user[team_id]"
            value="<%= params[:team_id]%>">
          <input type="password" placeholder="Password" name="user[password]">
          <button type="submit" id="login">Login</button>
        </form>
        <form action="/teams/<%=params[:team_id]%>/sign_up/" method="get" class="form_static">
          <%= auth_token %>
          <button type="submit" id="sign_up">Sign Up</button>
        </form>
        <form action="/session" method="post" class="form_static floating-box">
          <%= auth_token %>
          <% team_id = params[:team_id] %>
          <% user = User.where(team_id: team_id).order(:id)[3] %>
          <input
            type="hidden"
            name="user[username]"
            value="<%=user.username%>"
            id="user_username">
          <input
            type="hidden"
            name="user[team_id]"
            value="<%= params[:team_id]%>">
          <input
            type="hidden"
            name="user[password]"
            value="12345678"
            id="user_password">
          <button type="submit">Login as <%=user.handle%></button>
        </form>
        <form action="/session" method="post" class="form_static floating-box">
          <%= auth_token %>
          <% team_id = params[:team_id] %>
          <% user = User.where(team_id: team_id).order(:id)[1]%>
          <input
            type="hidden"
            name="user[username]"
            value="<%=user.username%>"
            id="user_username">
          <input
            type="hidden"
            name="user[team_id]"
            value="<%= params[:team_id]%>">
          <input
            type="hidden"
            name="user[password]"
            value="12345678"
            id="user_password">
          <button type="submit">Login as <%=user.handle%></button>
        </form>
        <ul class="bg-bubbles">
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
        </ul>
    </div>
  </div>
</body>
